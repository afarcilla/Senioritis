<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".EnterActivity">

    <Button
        android:id="@+id/skipButton"
        android:textColor="#1d9fb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="skip >>"
        android:onClick="skip"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#9da5a8"
            android:id="@+id/view" />
        <Button
            android:id="@+id/enterBtn"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1d9fb5"
            android:onClick="startClick"
            android:text="f i n i s h"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_alignBottom="@+id/relativeLayout"
        android:scaleX=".8"
        android:scaleY=".8"
        android:paddingBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView android:text="When does the term end?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/termEnd"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/skipButton"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
