<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/graphite</item>
        <item name="android:titleTextStyle">@style/MyActionBarText</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>

        <!-- Support library compatibility -->
        <item name="background">@color/graphite</item>
        <item name="titleTextStyle">@style/MyActionBarText</item>>
        <item name="windowActionBar">true</item>>
    </style>

    <style name="MyActionBarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textSize">20dp</item>>

    </style>
</resources>